.header
  .header__up
    =image_tag "material/logo/logo.png", size: "150x40", class: "header__logo"
    %input.login-input-text{placeholder: "キーワードから探す", class: "header__field"}
    =image_tag "material/icon/icon-search 1.png", size: "35x35", class: "header__search"
  .header__down
    .header__left
      .header__category カテゴリー
      .header__brand ブランド
    .header__rigth
      - if user_signed_in?
        = link_to "マイページ", "/users/#{current_user.id}", method: :get, class: "header__button"
        = link_to "ログアウト", destroy_user_session_path, method: :delete, class: "header__button"
      - else
        = link_to "ログイン", new_user_session_path, method: :get, class: "header__button"
        = link_to "新規会員登録", new_user_registration_path, method: :get, class: "header__button"
.main
  =image_tag "material/pict/bg-mainVisual-pict_pc.jpg", class: "main__picture" 
  .main__word
    .main__subject
      人生を変えるフリマアプリ
    .main__subword
      %p FURIMAはだれでもかんたんに出品・購入できる
      フリマアプリです
      

.content
  - @items.each do |item|
    .content__box
      =image_tag item.item_imgs[0].url, size: "200x250", class: "class__image"
      .content__price
        = item.price
        = item.name


