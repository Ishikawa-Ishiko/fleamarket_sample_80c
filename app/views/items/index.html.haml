.header
  .header__up
    =image_tag "logo/logo.png", size: "150x40", class: "header__logo"
    %input.login-input-text{placeholder: "キーワードから探す", class: "header__field"}
    =image_tag "icon/icon-search 1.png", size: "35x35", class: "header__search"
  .header__down
    .header__left
      .header__category 
        カテゴリー
      .header__brand 
        ブランド
    .header__right
      - if user_signed_in?
        = link_to "マイページ", "/users/#{current_user.id}", method: :get, class: "header__button"
        = link_to "ログアウト", destroy_user_session_path, method: :delete, class: "header__button"
      - else
        = link_to "ログイン", new_user_session_path, method: :get, class: "header__button"
        = link_to "新規会員登録", new_user_registration_path, method: :get, class: "header__button"

.main
