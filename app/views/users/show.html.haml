= render partial: "render/header"

.mypage
  .mypage__left
    =render "show"
  .mypage__right
    .mypage__right__top
      .mypage__right__top__box
        -if @image.present?
          .mypage__right__top__flame
            = image_tag @image.url, class: "mypage__right__top__image"
        -else
          .mypage__right__top__flame
            %i.fas.fa-user
        .mypage__right__top__name
          = "#{@nickname}のページです"
    .mypage__right__under 
      プロフィール
    - if @user_des.present?
      .mypage__right__under__list
        .mypage__right__under__box
          .name__space お名前
          %span：
          = @user_des.destination_family_name
          = @user_des.destination_first_name
          = "(#{@user_des.destination_family_name_kana}"
          = "#{@user_des.destination_first_name_kana})"
        .mypage__right__under__box
          .text__space 郵便番号
          %span：
          = @user_des.post_code
        .mypage__right__under__box
          .text__space 都道府県
          %span：
          = @user_des.prefecture
        .mypage__right__under__box
          .text__space 市区町村
          %span：
          = @user_des.city
        .mypage__right__under__box
          番地/建物名
          %span：
          = @user_des.address
          = @user_des.building_name
        .mypage__right__under__box
          .text__space 電話番号
          %span：
          = @user_des.phone_number


= render partial: "render/footer"
